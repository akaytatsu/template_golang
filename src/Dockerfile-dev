FROM golang:1.23-alpine AS base

ENV GO111MODULE="on"
ENV GOOS="linux"
ENV CGO_ENABLED=1
ENV GOPROXY=https://proxy.golang.org

# System dependencies
RUN apk update && apk add --no-cache ca-certificates curl bash gcc

# Instalar todas as ferramentas uma única vez
RUN go install -tags musl gotest.tools/gotestsum@v1.12.0 && \
    go install -tags musl github.com/golang/mock/mockgen@v1.6.0 && \
    go install -tags musl github.com/smartystreets/goconvey@v1.8.1 && \
    go install -tags musl github.com/go-delve/delve/cmd/dlv@v1.22.1 && \
    go install -tags musl github.com/air-verse/air@v1.61.1 && \
    go install -tags musl github.com/swaggo/swag/cmd/swag@v1.16.2

FROM base AS dev
WORKDIR /app

# Copiar apenas go.mod e go.sum primeiro para cache de dependências
COPY go.mod go.sum ./
RUN go mod download

# Depois copiar o resto do código
COPY . .

EXPOSE 8080
EXPOSE 2345

ENTRYPOINT ["/go/bin/air"]
